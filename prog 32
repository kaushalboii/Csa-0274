#include <stdio.h>

#define MAX_SIZE 100

int main()
{
    int arr[MAX_SIZE], n, i;
    float sum = 0, avg;

    // Input size of array
    printf("Enter the size of array: ");
    scanf("%d", &n);

    // Input elements of array
    printf("Enter elements of array:\n");
    for(i=0; i<n; i++)
    {
        scanf("%d", &arr[i]);
    }

    // Calculate sum of array elements
    for(i=0; i<n; i++)
    {
        sum += arr[i];
    }

    // Calculate average of array elements
    avg = sum / n;

    // Display sum and average of array elements
    printf("Sum of array elements = %0.2f\n", sum);
    printf("Average of array elements = %0.2f\n", avg);

    return 0;
}
