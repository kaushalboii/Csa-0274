#include <stdio.h>
#include <string.h>

void removeChar(char *str, char c) {
    int i, j;

    for(i = 0, j = 0; str[i] != '\0'; i++){
        if(str[i] != c){
            str[j] = str[i];
            j++;
        }
    }
    str[j] = '\0';
}

int main() {
    char str[100], c;

    printf("Enter a string: ");
    scanf("%[^\n]", str);

    printf("Enter the character to remove: ");
    scanf(" %c", &c);

    removeChar(str, c);

    printf("Resulting string is: %s\n", str);

    return 0;
}
