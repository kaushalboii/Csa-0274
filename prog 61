#include <stdio.h>

void reverseArray(int *arr, int size);

int main() {
    int arr[100], size, i;

    printf("Enter the size of the array: ");
    scanf("%d", &size);

    printf("Enter the elements of the array:\n");
    for(i=0; i<size; i++) {
        scanf("%d", &arr[i]);
    }

    printf("\nOriginal array: ");
    for(i=0; i<size; i++) {
        printf("%d ", arr[i]);
    }

    reverseArray(arr, size);

    printf("\nReversed array: ");
    for(i=0; i<size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}

void reverseArray(int *arr, int size) {
    int *p1, *p2, temp;
    p1 = arr;
    p2 = arr + size - 1;

    while(p1 < p2) {
        temp = *p1;
        *p1 = *p2;
        *p2 = temp;
        p1++;
        p2--;
    }
}
