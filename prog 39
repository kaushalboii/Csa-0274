#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    int i, j;
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    // Trim leading white spaces
    while (str[0] == ' ')
    {
        for (i = 0; i < strlen(str); i++)
        {
            str[i] = str[i + 1];
        }
    }
    // Trim trailing white spaces
    while (str[strlen(str) - 1] == ' ')
    {
        str[strlen(str) - 1] = '\0';
    }
    printf("Trimmed string: %s", str);
    return 0;
}
